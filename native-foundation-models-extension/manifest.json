{
  "manifest_version": 3,
  "name": "Native Foundation Models",
  "version": "1.0.0",
  "description": "Provides on-device LLM capabilities to websites with built-in playground",
  
  "icons": {
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  
  "permissions": [
    "nativeMessaging",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_title": "Open Native Foundation Models Playground",
    "default_icon": {
      "16": "icons/icon-48.png",
      "32": "icons/icon-64.png",
      "48": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "download-dialog.js", "brain.png", "prism.js/prism.js", "prism.js/prism.css"],
      "matches": ["<all_urls>"]
    }
  ]
}